#include <iostream>
using namespace std;

typedef char *arrayString;

char charAt(arrayString s, int position);
void append(arrayString &s, char c);
void appendTester();
int length(arrayString s);

int main() {
	appendTester();
}

char charAt(arrayString s, int position) {
	return s[position];
}

void append(arrayString &s, char c) {
	int oldLength = 0;
	while (s[oldLength] != 0) {
		oldLength++;
	}

	arrayString newStr = new char[oldLength + 2]; // space for +1 char and null
	for (int i = 0; i < oldLength; i++) {
		newStr[i] = s[i];
	}
	newStr[oldLength] = c;
	newStr[oldLength + 1] = 0;
	delete[] s;
	s = newStr;
}

int length(arrayString s) {
	int count = 0;
	while (s[count] != 0) {
		count++
	}
}
}

void appendTester() {
arrayString a = new char[5];
a[0] = 't';
a[1] = 'e';
a[2] = 's';
a[3] = 't';
a[4] = 0; // 0 represents null in ascII and other char code systems  and used as end of line in c and c++;
append(a, '!');
cout << a << "\n";
}
